{% if (is_granted('ROLE_ADMINISTRATEUR')) %} 
<form method="post" action="{{ path('app_categorie_delete', {'id': categories.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categories.id) }}">
    <button class="btn">Delete</button>
</form>
 {% endif %}
